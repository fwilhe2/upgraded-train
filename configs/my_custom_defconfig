# Minimal Buildroot defconfig example (x86_64)
BR2_x86_64=y
BR2_GENERIC_HOSTNAME="custom-buildroot"
BR2_ROOTFS_OVERLAY="board/custom/overlay"
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_USE_KCONFIG=y

# Specify the kernel defconfig to use (required)
# For x86_64 use "x86_64_defconfig". Replace this with your target's kernel defconfig if different.
BR2_LINUX_KERNEL_DEFCONFIG="x86_64_defconfig"

# Point Buildroot to our kernel fragment(s); fragments will be merged with the base defconfig
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FRAGMENT_FILES="board/custom/linux/kernel-fragment.cfg"

# Keep filesystem small
BR2_TARGET_ROOTFS_EXT2=y
BR2_PACKAGE_BUSYBOX=y
BR2_SYSTEM_DHCP=y